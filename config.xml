<?xml version='1.0' encoding='utf-8'?>
<widget id="com.dttr.dotter" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Dotter</name>
	<author  href="http://www.dotter.com.br" email="sistemas@dotter.com.br">
		Dotter Brasil Ltda
    </author>
    <description>
		Teste de aplicativos para demonstração.
    </description>
	
    <content src="index.html" />
    
    <icon src="www/icon.png" />
    <gap:splash src="www/icon.png" />
	
    <preference name="orientation"      value="portrait" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="true" />
    <preference name="webviewbounce"    value="true" />
	<preference name="permissions" 		value="none"/>
    <preference name="DisallowOverscroll" value="true" /> 
	
    <plugin name="cordova-plugin-whitelist" version="1" />
	<plugin name="phonegap-plugin-barcodescanner" />
	<plugin name="cordova-plugin-geolocation" />
	
	<access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
