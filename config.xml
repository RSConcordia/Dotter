<?xml version='1.0' encoding='utf-8'?>
<widget id="com.dttr.dotter" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Dotter</name>
	<author  href="http://www.dotter.com.br" email="sistemas@dotter.com.br">
		Dotter Brasil Ltda
    </author>
    <description>
		Teste de aplicativos para demonstração.
    </description>
	
    <content src="index.html" />
    
    <icon src="www/icon.png" />
	<icon src="www/icon.png" platform="android" qualifier="ldpi" />
	<icon src="www/icon.png" platform="android" qualifier="mdpi" />
	<icon src="www/icon.png" platform="android" qualifier="hdpi" />
	<icon src="www/icon.png" platform="android" qualifier="xhdpi" />
	<icon src="www/icon.png" platform="android" qualifier="xxhdpi" />
	<icon src="www/icon.png" platform="android" qualifier="xxxhdpi" />
	<icon src="www/icon.png" platform="android" qualifier="fr-xxhdpi" />
    <splash src="www/icon.png" />
    <gap:splash src="www/icon.png" />
	<splash src="www/icon.png" platform="android" qualifier="ldpi" />
	<splash src="www/icon.png" platform="android" qualifier="mdpi" />
	<splash src="www/icon.png" platform="android" qualifier="hdpi" />
	<splash src="www/icon.png" platform="android" qualifier="xhdpi" />
	<splash src="www/icon.png" platform="android" qualifier="fr-xhdpi" />
	<splash src="www/icon.png" platform="android" qualifier="port-xxhdpi" />
	<splash src="www/icon.png" platform="android" qualifier="land-xxhdpi" />
	<splash src="www/icon.png" platform="android" qualifier="xxxhdpi" />
	
    <preference name="orientation"      value="portrait" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="true" />
    <preference name="webviewbounce"    value="true" />
	
    <plugin name="cordova-plugin-whitelist" version="1" />
	<plugin spec="https://github.com/phonegap/phonegap-plugin-barcodescanner.git"/>
	<plugin name="org.apache.cordova.geolocation" spec="0.3.12" source="pgb" />
	
	<access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
